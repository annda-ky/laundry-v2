generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  OWNER
  KASIR
}

enum ServiceType {
  KILOAN
  SATUAN
}

enum OrderStatus {
  DITERIMA
  DICUCI
  DIKERINGKAN
  DISETRIKA
  SELESAI
  DIAMBIL
  DIBATALKAN
}

enum PaymentStatus {
  SUDAH_BAYAR
  BELUM_BAYAR
}

enum PaymentMethod {
  TUNAI
  TRANSFER
  QRIS
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String?  @unique
  password  String
  name      String?
  role      Role     @default(KASIR)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]
  logs   ActivityLog[]

  @@map("users")
}

model Service {
  id            String      @id @default(uuid())
  name          String
  type          ServiceType
  price         Decimal     @db.Decimal(12, 2)
  estimatedTime Int         // dalam jam
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  orderItems OrderItem[]

  @@map("services")
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]

  @@map("customers")
}

model Order {
  id            String        @id @default(uuid())
  orderNumber   String        @unique
  customerId    String
  userId        String
  status        OrderStatus   @default(DITERIMA)
  paymentStatus PaymentStatus @default(BELUM_BAYAR)
  totalAmount   Decimal       @db.Decimal(12, 2)
  notes         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  customer      Customer        @relation(fields: [customerId], references: [id])
  user          User            @relation(fields: [userId], references: [id])
  items         OrderItem[]
  payment       Payment?
  statusHistory StatusHistory[]

  @@map("orders")
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  serviceId String
  quantity  Decimal @db.Decimal(10, 2) // berat (kg) atau jumlah item
  price     Decimal @db.Decimal(12, 2)
  subtotal  Decimal @db.Decimal(12, 2)

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id])

  @@map("order_items")
}

model Payment {
  id      String        @id @default(uuid())
  orderId String        @unique
  amount  Decimal       @db.Decimal(12, 2)
  method  PaymentMethod @default(TUNAI)
  paidAt  DateTime      @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model StatusHistory {
  id        String      @id @default(uuid())
  orderId   String
  status    OrderStatus
  changedBy String
  changedAt DateTime    @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("status_history")
}

model ActivityLog {
  id        String   @id @default(uuid())
  userId    String
  action    String
  entity    String
  entityId  String?
  details   Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("activity_logs")
}

model Settings {
  id           String  @id @default(uuid())
  logoUrl      String?
  businessName String  @default("Laundry")
  address      String?
  phone        String?
  footer       String?
  template     String  @default("simple")
  updatedAt    DateTime @updatedAt

  @@map("settings")
}
